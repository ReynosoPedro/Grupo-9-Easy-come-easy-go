<!DOCTYPE html>
<html>

<head>
    <title>Register</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <meta name="viewport" content="width=device-wid th">
    <meta charset="utf-8">
    <link href="/css/styles+home.css" rel="stylesheet">
    <link href="/css/styles vender.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/e3500cfe31.js" crossorigin="anonymous"></script>
</head>

<body>
    <%- include('../partials/header')%>
    <main>
        <ul class="errorescamp"></ul>
        <form method="POST" action="agregar" enctype="multipart/form-data" >
            <div class="formulario" id="formulario">
            
            <div class="part1">
                <div class="form">
                    <% console.log(locals.errors) %>
                    <p> Marca  </p><select type="text" name="marca" id="marca" placeholder="Marca"  >
                    <option value="<%= locals.old && locals.old.marca? locals.old.marca : null %>" selected disabled hidden> <%= locals.old  && locals.old.marca ? bases[0][locals.old.marca-1].brand  : "Seleccione una opcion" %></option>
                        <% for(let i= 0; i < bases[0].length; i++){ %>
                                <option value=<%= bases[0][i].id %> > <%= bases[0][i].brand %></option>
                        <% } %>
                    </select>
                <% if(locals.errors && errors.marca ){ %>
                        <p class="mensajeError"><%= errors.marca.msg  %> </p>
                <% } %>
                </div>
                <div class="form">
                    <p> Modelo  </p><select  type="text" name="modelo" id="modelo" placeholder="Modelo">
                        <option value="<%= locals.old && locals.old.modelo? locals.old.modelo : null %>" selected disabled hidden> <%= locals.old  && locals.old.modelo ? bases[1][locals.old.modelo-1].model : "Seleccione una opcion" %></option>
                        <% for(let i= 0; i < bases[1].length; i++){ %>
                            <option value=<%= bases[1][i].id %> > <%= bases[1][i].model %></option>
                    <% } %>
                    </select>
                    <% if(locals.errors && errors.modelo){ %>
                        <p class="mensajeError"><%= errors.modelo.msg  %> </p>
                    <% } %>
                </div>
                <div class="form">
                    <p> Kilometraje </p><select type="number" name="kilometraje" id="kilometraje" placeholder="Kilometraje" >
                    <option value="<%= locals.old && locals.old.kilometraje? locals.old.kilometraje : null %>" selected disabled hidden> <%= locals.old  && locals.old.kilometraje ? bases[3][locals.old.kilometraje-1].intervals : "Seleccione una opcion" %></option>
                        <% for(let i= 0; i < bases[3].length; i++){ %>
                                <option value= <%= bases[3][i].id %> ><%= bases[3][i].intervals %></option>
                        <% } %>
                        </select >
                    
                </div>
                <div class="form">
                    <p> Precio </p><input type="number" name="precio" id="precio" placeholder="Precio" value="<%= locals.old && locals.old.precio? locals.old.precio : null %>">
                </div>
                <div class="form">
                    <p> Color </p><select type="text" name="color" id="color" placeholder="Color">
                    <option value="<%= locals.old && locals.old.color? locals.old.color : null %>" selected disabled hidden> <%= locals.old  && locals.old.color ? bases[5][locals.old.color-1].color : "Seleccione una opcion" %></option>
                        <% for(let i= 0; i < bases[5].length; i++){ %>

                                <option value= <%= bases[5][i].id %> ><%= bases[5][i].color%></option>
                        <% } %>
                        </select >
                </div>
            </div>
            <div class="part2">
                <div class="form">
                    <p> A침o </p><select type="number" name="year" id="year" placeholder="A침o"  >
                    <option value="<%= locals.old && locals.old.year? locals.old.year : null %>" selected disabled hidden> <%= locals.old  && locals.old.year ? bases[4][locals.old.year-1].year : "Seleccione una opcion" %></option>
                        <% for(let i= 0; i < bases[4].length; i++){ %>
                                <option value= <%= bases[4][i].id %> ><%= bases[4][i].year %></option>
                        <% } %>
                        </select >
                </div>
                <div class="form">
                    <p> Combustible </p><select type="text" name="combustible" id="combustible" placeholder="Combustible" >
                    <option value="<%= locals.old && locals.old.combustible? locals.old.combustible : null %>" selected disabled hidden> <%= locals.old  && locals.old.combustible ? locals.old.combustible : "Seleccione una opcion" %></option>
                    <option value="Nafta" >Nafta </option>
                    <option value="Gasoil" >Gasoil</option>
                    <option value="GNC" >GNC </option>
                    <option value="Electrico" >Electrico </option>
                </select >
                </div>
                <div class="form">
                    <p> Transmision </p><select type="text" name="transmision" id="transmision" placeholder="Transmision">
                    <option value="<%= locals.old && locals.old.transmision? locals.old.transmision : null %>" selected disabled hidden> <%= locals.old  && locals.old.transmision ? locals.old.transmision : "Seleccione una opcion" %></option>
                    <option value="Manual" >Manual </option>
                    <option value="Automatica" >Automatica </option>
                </select >
                </div>
                <div class="form">
                    <p> Condici칩n </p><select type="text" name="condicion" id="condicion" placeholder="Condici칩n"  >
                        <option value="<%= locals.old && locals.old.condicion? locals.old.condicion : null %>" selected disabled hidden> <%= locals.old  && locals.old.condicion ? locals.old.condicion : "Seleccione una opcion" %></option>
                    <option value="Nuevo" >Nuevo </option>
                    <option value="Usado" >Usado </option>
                </select >
                </div>
                <div class="form">
                    <p> Categoria </p><select type="text" name="categoria" id="categoria" placeholder="Categoria" >
                        <option value="<%= locals.old && locals.old.categoria? locals.old.categoria : null %>" selected disabled hidden> <%= locals.old  && locals.old.categoria ? bases[2][locals.old.categoria-1].type_auto : "Seleccione una opcion" %></option>
                    <% for(let i= 0; i < bases[2].length; i++){ %>
                            <option value= <%= bases[2][i].id %> ><%= bases[2][i].type_auto %></option>
                    <% } %>
                    </select >
                </div>
            </div>
            </div>
            <br>
            <div class="custom-file">
                <label for ="imagen">Subi una foto del costado derecho</label>
                <input type="file"   name="imagen"  id="image" placeholder="Elige una imagen" accept= ".jpg, .jpeg .png" value="" />  
                <% if(locals.errors && errors.imagen){ %>
                    <p class="mensajeError"><%= errors.imagen.msg  %> </p>
                <% } %>
            </div>
            <br>
            <div class="custom-file"> 
                <label for ="imagen2">Subi una foto del costado izquierdo </label>
            <input  type="file" name="imagen2" id="image2" placeholder="image 2" accept= ".jpg, .jpeg .png"  value="" />  
            <% if(locals.errors && errors.imagen2){ %>
            <p class="mensajeError"><%= errors.imagen-auto2.msg  %> </p>
            <% } %>
            </div>
            <br>
            <div class="custom-file">
                <label for ="imagen3">Subi una foto del frente </label>
            <input  type="file" name="imagen3"  id="image3" placeholder="image 3"  accept= ".jpg, .jpeg .png" value="" /> 
            <% if(locals.errors && errors.imagen3){ %>
            <p class="mensajeError"><%= errors.imagen3.msg  %>  </p>
            <% } %>
            </div>
            <br>
            <div class="custom-file">
                <label for ="imagen4">Subi una foto de atras </label>
            <input  type="file" name="imagen4" id="image4" placeholder="image 4" accept= ".jpg, .jpeg .png"  value="" /> 
            <% if(locals.errors && errors.imagen4){ %>
            <p class="mensajeError"><%= errors.imagen4.msg  %>  </p>
            <% } %>
            </div>
            <br>
            <div class="custom-file">
                <label for ="imagen5">Subi una foto del interior </label>
            <input type="file" name="imagen5"  id="image5" placeholder="image 5" accept= ".jpg, .jpeg .png"  value="" /> 
            <% if(locals.errors && errors.imagen5){ %>
            <p class="mensajeError"><%= errors.imagen5.msg  %> </p>
            <% } %>
            </div> 
            <br>
            <button class="formb" type="submit">Publicar</button>   
        </form>
    </main>
    <%- include('../partials/footer')%>
    <script src= "/js/productos.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
