<!Doctype html>
<html>
    <head>
        <title>Detalle de productos</title>
        <meta name="viewport" content="width=device-wid th">
        <meta charset="utf-8">
        <link href="/css/styles+productos.css" rel="stylesheet">
        <script src="https://kit.fontawesome.com/e3500cfe31.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <%- include('../partials/header')%>
        <main>   
            <div class="headerfiltros">
                <span id="titular-filtro">FILTRO</span>
                <span id="titular-seleccion"> |Reset all| Filtros aplicados x |</span>
                <span id="titular-orden"> Ordenar: Mas relevante <i class="fa-solid fa-arrow-down"></i></span>
            </div>
            <section id="marketplace">
            <div class="filtros-mobile">
                <span>Tipo  |</span>
                <span>Marca | </span>
                <span>+Filtros  |</span>
                <span> Ordenar: ej Precio </span>
                <span><i class="fa-solid fa-arrow-down"></i></span>
            </div>
            <div class="filtros">
                <ul>Categorias
                    <li>SUVs</li>
                    <li>Hatchbacks</li>
                    <li>Sedan</li>
                    <li>Coupes</li>
                    <li>Sports</li>
                    <li>Convertibles</li>
                    <li>Utilitario</li>
                </ul>
                <ul>AÃ±o
                    <li>2022</li>
                    <li>2021</li>
                    <li>2020</li>
                    <li>2019</li>
                </ul>
                <ul>Precio
                    <li>Caro</li>
                    <li>Medio</li>
                    <li>Barato</li>
                </ul>
                <ul>Condicion
                    <li>Nuevo</li>
                    <li>Usado</li>
                </ul>
                <ul>Marca
                    <li>Ford</li>
                    <li>Honda</li>
                    <li>BMW</li>
                    <li>Peugeot</li>
                    <li>Jaguar</li>
                    <li>Hyundai</li>
                </ul>
                <ul>Kilometros
                    <li>menos</li>
                    <li>mas</li>
                </ul>
                <ul>Combustible
                    <li>Electrico</li>
                    <li>Diesel</li>
                    <li>Hibrido</li>
                </ul>
            </div>
            <section class="contenedor-productos">
                <% for(let i= 0; i < vehiculos.length; i++){ %>
                    <div class="productos">
                        <a href= "/detalle/<%=vehiculos[i].id%>" </a>
                        <img src="\images\autos\<%=vehiculos[i].image_filename%>" style='height: 100%; width: 100%; object-fit: fill' >  
                        <h4 class="productos-titulo"><%= vehiculos[i].brands.brand + " "+vehiculos[i].models.model + " "+vehiculos[i].categories.type_auto %></h4>
                        <h4 class="productos-titulo"><%= vehiculos[i].colors.color %></h4>
                        <p class="productos-detalles"><%= vehiculos[i].years.year +" "+vehiculos[i].km_intervals.intervals +" km "+ vehiculos[i].transmission + " "+vehiculos[i].conditions %></p>
                        <p class="productos-precio"><%= vehiculos[i].prices + " "+vehiculos[i].stock %></p>
                    </div>
                <% } %>                 

            </section>
            </section>
            <div id="paginas-mobile">
                <span><i class="fa-solid fa-chevron-left"></i></span>
                <span> 1 de 1 </span>
                <span><i class="fa-solid fa-chevron-right"></i> </span>
                <span><i class="fa-solid fa-chevrons-double-right"></i>  </span>
            </div>
        </main>
        <%- include('../partials/footer')%>
    </body>
</html>